<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Member"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/custom_background_tv"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp">
    </TextView>


    <EditText
        android:id="@+id/edtAddTenTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Họ và tên"
        android:padding="10dp"
        android:layout_below="@+id/tv1"
        android:background="@drawable/custom_edit_update_insert"
        />

    <EditText
        android:id="@+id/edtAddEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_update_insert"
        android:layout_below="@+id/edtAddTenTv"
        />

    <EditText
        android:id="@+id/edtAddSdt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Số điện thoại"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_update_insert"
        android:layout_below="@+id/edtAddEmail"
        />

    <EditText
        android:id="@+id/edtAddDob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Năm sinh"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_update_insert"
        android:layout_below="@+id/edtAddSdt"
        />

    <Button
        android:id="@+id/themTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/edtAddDob"
        android:text="Thêm" />

</RelativeLayout>