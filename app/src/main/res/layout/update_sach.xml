<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update Book"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/custom_background_tv"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp">
    </TextView>

    <EditText
        android:id="@+id/edtUpdateTenSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tên sách"
        android:padding="10dp"
        android:layout_below="@+id/tv1"
        android:background="@drawable/custom_edit_update_insert"
        />

    <EditText
        android:id="@+id/edtUpdateTacGia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tác giả"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_update_insert"
        android:layout_below="@+id/edtUpdateTenSach"
        />

    <EditText
        android:id="@+id/edtUpdateGia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_update_insert"
        android:layout_below="@+id/edtUpdateTacGia"
        />

    <Button
        android:id="@+id/updateSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/edtUpdateGia"
        android:text="Lưu" />

</RelativeLayout>